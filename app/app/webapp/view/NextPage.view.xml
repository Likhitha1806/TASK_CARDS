
<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:m="sap.m"
    xmlns:f="sap.f"
    xmlns:cards="sap.f.cards"
    xmlns:layout="sap.ui.layout"
    xmlns:unified="sap.ui.unified"
    xmlns:viz="sap.viz.ui5.controls"
    xmlns:viz.data="sap.viz.ui5.data"
    xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds"
    controllerName="app.controller.NextPage">

    <m:Page id="nextPage" title="Event Calendar - Employee Info">
        <m:content>
            <m:FlexBox id="_IDGenFlexBox1" direction="Row" justifyContent="Start" alignItems="Stretch" width="100%">
                <!-- Employee Info Card inside VBox -->
                <m:VBox id="employeeInfoContainer" width="400px">
                    <f:Card id="_IDGenCard" width="100%">
                        <f:header>
                            <cards:Header id="_IDGenHeader" title="{EmployeeData>/EmployeeDetail/Name}" subtitle="{EmployeeData>/EmployeeDetail/Role}" />
                        </f:header>
                        <f:content>
                            <layout:Grid id="_IDGenGrid" width="100%" defaultSpan="XL6 L6 M6 S12">
                                 <m:VBox id="_IDGenVBoxx">
                                    <m:Label id="_IDGenLabel55" text="MailID:" />
                                    <m:Text id="_IDGenText177" text="{EmployeeData>/EmployeeDetail/MailID}" />
                                </m:VBox>
                                <m:VBox id="_IDGenVBox">
                                    <m:Label id="_IDGenLabel5" text="Employee ID:" />
                                    <m:Text id="_IDGenText17" text="{EmployeeData>/EmployeeDetail/ID}" />
                                </m:VBox>
                                <m:VBox id="_IDGenVBox5">
                                    <m:Label id="_IDGenLabel6" text="Role:" />
                                    <m:Text id="_IDGenText18" text="{EmployeeData>/EmployeeDetail/Role}" />
                                </m:VBox>
                                <m:VBox id="_IDGenVBox7">
                                    <m:Label id="_IDGenLabel7" text="Qualification:" />
                                    <m:Text id="_IDGenText32" text="{EmployeeData>/EmployeeDetail/Qualification}" wrapping="true" />
                                </m:VBox>
                            </layout:Grid>
                        </f:content>
                    </f:Card>
                     <m:VBox id="_IDGenVBox10" height="5px"/> 

                    <!-- Performance Growth Card placed directly below Employee Info -->
                     <f:Card id="hikeExperiencePiehartCard" width="100%">
                    <f:header>
                        <cards:Header id="_IDGenHeader2" title="Hike vs Experience" subtitle="Pie Chart Representation"/>
                    </f:header>
                    <f:content>
                        <viz:VizFrame id="hikeExperiencePieChart" width="100%" height="280px" vizType="pie">
                            <viz:dataset>
                                <viz.data:FlattenedDataset id="pieChartDataset" data="{EmployeeData>/HikeExperience}">
                                    <viz.data:dimensions>
                                        <viz.data:DimensionDefinition id="pieChartDimension" name="Category" value="{Category}"/>
                                    </viz.data:dimensions>
                                    <viz.data:measures>
                                        <viz.data:MeasureDefinition id="pieChartMeasure" name="Value" value="{Value}"/>
                                    </viz.data:measures>
                                </viz.data:FlattenedDataset>
                            </viz:dataset>
                            <viz:feeds>
                                <viz.feeds:FeedItem id="pieChartFeedDim" type="Dimension" uid="color" values="Category"/>
                                <viz.feeds:FeedItem id="pieChartFeedMeasure" type="Measure" uid="size" values="Value"/>
                            </viz:feeds>
                        </viz:VizFrame>
                    </f:content>
                </f:Card>
                </m:VBox>

                <m:ToolbarSpacer id="_IDGenToolbarSpacer" width="5px"/> 

                <!-- Calendar Card -->
                <m:VBox id="_IDGenVBox11">
    <!-- Event Calendar Card -->
    <f:Card id="eventCalendarCard" width="300px">
        <f:header>
            <cards:Header id="_IDGenHeader1" title="Event Calendar" subtitle="Select a Date" />
        </f:header>
        <f:content>
            <m:VBox id="_IDGenVBox12" width="250px" height="340px">
                <unified:Calendar id="employeeCalendar" />
                <m:Label id="_IDGenLabel8" text="Joining Date:" />
                <m:DatePicker id="joiningDatePicker"
                    value="{EmployeeData>/EmployeeDetail/Joining_Date}"
                    displayFormat="yyyy-MM-dd"
                    change=".onDateChange"/>
            </m:VBox>
        </f:content>
    </f:Card>

    <m:VBox id="_IDGenVBox13" height="10px"/> 

    <!-- Employee of the Year Card (Placed directly below the Event Calendar) -->
 <f:Card id="employeeOfTheYearCard" width="300px" height="90px">
    <f:header>
        <cards:Header id="_IDGenHeader3" title="Employee of the Year"  />
    </f:header>
    <f:content>
        <m:Text id="employeeYearText" text="{EmployeeData>/EmployeeDetail/Employee_of_the_year} 🏆" 
            wrapping="true"  textAlign="Center" class="largeText"/>
    </f:content>
</f:Card>


</m:VBox>


                <m:ToolbarSpacer id="_IDGenToolbarSpacer1" width="8px"/> 

               <f:Card id="hikeExperiencePieChartCard" width="300px">
    <f:header>
        <cards:Header id="hikeExperiencePieChartHeader" title="Hike vs Experience" subtitle="Pie Chart Representation"/>
    </f:header>
    <f:content>
       <viz:VizFrame id="hikeExperienceColumnChart" width="100%" height="300px" vizType="column">
    <viz:dataset>
        <viz.data:FlattenedDataset id="columnChartDataset" data="{EmployeeData>/HikeExperience}">
            <viz.data:dimensions>
                <viz.data:DimensionDefinition id="columnChartDimension" name="Category" value="{Category}"/>
            </viz.data:dimensions>
            <viz.data:measures>
                <viz.data:MeasureDefinition id="columnChartMeasure" name="Value" value="{Value}"/>
            </viz.data:measures>
        </viz.data:FlattenedDataset>
    </viz:dataset>
    <viz:feeds>
        <viz.feeds:FeedItem id="columnChartFeedDim" type="Dimension" uid="categoryAxis" values="Category"/>
        <viz.feeds:FeedItem id="columnChartFeedMeasure" type="Measure" uid="valueAxis" values="Value"/>
    </viz:feeds>
</viz:VizFrame>


    </f:content>
</f:Card>
<m:ToolbarSpacer id="_IDGenToolbarSpacer3" width="8px"/> 

<!-- Project Info List Card -->
<f:Card id="projectInfoCard" width="300px">
    <f:header>
        <cards:Header id="projectInfoHeader" title="Project Information" subtitle="Key Details"/>
    </f:header>
    <f:content>
        <m:List id="projectInfoList">
            <m:StandardListItem id="_IDGenStandardListItem1" title="Project Name" description="{EmployeeData>/EmployeeDetail/Project_Name}" />
            <m:StandardListItem id="_IDGenStandardListItem2" title="Manager" description="{EmployeeData>/EmployeeDetail/Manager}" />
            <m:StandardListItem id="_IDGenStandardListItem3" title="Client Name" description="{EmployeeData>/EmployeeDetail/Client_Name}" />
            <m:StandardListItem id="_IDGenStandardListItem4" title="Team Lead Name" description="{EmployeeData>/EmployeeDetail/Team_Lead_Name}" />
        </m:List>
    </f:content>
</f:Card>


            </m:FlexBox>
        </m:content>
    </m:Page>
</mvc:View>
