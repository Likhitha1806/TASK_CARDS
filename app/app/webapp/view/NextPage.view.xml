<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:m="sap.m"
    xmlns:f="sap.f"
    xmlns:cards="sap.f.cards"
    xmlns:layout="sap.ui.layout"
    xmlns:unified="sap.ui.unified"
    controllerName="app.controller.NextPage">

    <m:Page id="nextPage" title="Event Calendar  Employee Info">
        <m:content>
            <m:FlexBox id="_IDGenFlexBox1" direction="Row" justifyContent="Start" alignItems="Start" width="100%">
                
                <!-- Employee Info Card -->
                <f:Card id="_IDGenCard" width="400px">
                    <f:header>
                    
                        <cards:Header id="_IDGenHeader" title="{EmployeeData>/EmployeeDetail/Name}" subtitle="{EmployeeData>/EmployeeDetail/Role}" />
                    </f:header>
                    <f:content>
                        <layout:Grid id="_IDGenGrid" width="100%" defaultSpan="XL6 L6 M6 S12">
                            <!-- First Row: Employee ID & Role -->
                            <m:VBox id="_IDGenVBox" class="sapUiSmallMargin">
                                <m:Label id="_IDGenLabel6" text="Employee ID:" />
                                <m:Text id="_IDGenText17" text="{EmployeeData>/EmployeeDetail/ID}" />
                            </m:VBox>
                            <m:VBox id="_IDGenVBox5" class="sapUiSmallMargin">
                                <m:Label id="_IDGenLabel7" text="Role:" />
                                <m:Text id="_IDGenText18" text="{EmployeeData>/EmployeeDetail/Role}" />
                            </m:VBox>
                            <!-- Second Row: Qualification -->
                            <m:VBox id="_IDGenVBox7" class="sapUiSmallMargin">
                                <m:Label id="_IDGenLabel8" text="Qualification:" />
                                <m:Text id="_IDGenText32" text="{EmployeeData>/EmployeeDetail/Qualification}" wrapping="true" tooltip="{EmployeeData>/EmployeeDetail/Qualification}" />
                            </m:VBox>
                            <!-- Third Row: Contact Info -->
                            <m:VBox id="_IDGenVBox8" class="sapUiSmallMargin">
                                <m:Label id="_IDGenLabel9" text="Contact:" />
                                <m:Text id="_IDGenText34" text="{EmployeeData>/EmployeeDetail/Contact}" />
                            </m:VBox>
                            <m:VBox id="_IDGenVBox10" class="sapUiSmallMargin">
                                <m:Label id="_IDGenLabel10" text="Mail ID:" />
                                <m:Text id="_IDGenText35" text="{EmployeeData>/EmployeeDetail/MailID}" />
                            </m:VBox>
                            <!-- Fourth Row: Address -->
                            <m:VBox id="_IDGenVBox11" class="sapUiSmallMargin">
                                <m:Label id="_IDGenLabel11" text="Address:" />
                                <m:Text id="_IDGenText36" text="{EmployeeData>/EmployeeDetail/Address}" wrapping="true" tooltip="{EmployeeData>/EmployeeDetail/Address}" />
                            </m:VBox>
                        </layout:Grid>
                    </f:content>
                </f:Card>

                <m:ToolbarSpacer id="_IDGenToolbarSpacer" width="20px"/> 

                <!-- Calendar Card -->
                <f:Card id="calendarCard" width="300px">
                    <f:header>
                        <cards:Header id="calendarHeader" title="Event Calendar" subtitle="Select a Date" />
                    </f:header>
                    <f:content>
                        <m:VBox id="_IDGenVBox12" class="sapUiSmallMargin">
                            <unified:Calendar id="employeeCalendar" />
                            <m:Label id="_IDGenLabel12" text="Joining Date:" />
                            <m:DatePicker id="joiningDatePicker"
                                value="{EmployeeData>/EmployeeDetail/Joining_Date}"
                                displayFormat="yyyy-MM-dd"
                                change=".onDateChange"/>
                        </m:VBox>
                    </f:content>
                </f:Card>
            </m:FlexBox>
        </m:content>
    </m:Page>
</mvc:View>
